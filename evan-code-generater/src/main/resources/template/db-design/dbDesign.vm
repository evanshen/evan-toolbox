<html>
<header>
    <meta charset="UTF-8">
    <style>
        .table th,.table td {
            font-size: 16px;
        }
    </style>
</header>
<body>
    #foreach($table in $tables)
    <h2>表$!{table.tableName} --$!{table.tableComments}</h2>
    <table class="table" cellspacing="0">
        <tr bgcolor="#dddddd">
            <th width="6%">序号
            </th>
            <th width="30%">字段
            </th>
            <th width="20%">数据类型
            </th>
            <th width="6%">主键
            </th>
            <th>注释
            </th>
        </tr>
        #foreach($col in $table.columns)
            <tr>
                <td align="center">$foreach.count</td>
                <td>$!col.columnName</td>
                <td>
                    #if("$!col.length"=="")
                        $!col.dbDataType
                    #else
                        $!{col.dbDataType}
                        #if($col.length && ${col.length}!=0)
                            ($!{col.length})
                        #end
                    #end
                </td>
                <td align="center">
                    #if($!col.isPk==1)
                        是
                    #end
                </td>
                <td>
                    $!col.comment
                </td>
            </tr>
        #end
    </table>
    #end
</body>
</html>
<?xml version="1.0" encoding="UTF-8"?>
<project name="pdf-tool-build" default="build" basedir=".">

	
	<property name="author" value="shenwei@ancun.com" />
	<property name="work.dir" value="../target" />
	<property name="target.file" value="${work.dir}/pdf-tool.zip" />
	
	<target name="build" description="pdf-tool-build" >
		<copy todir="${work.dir}/lib" preservelastmodified="true">			
			<fileset dir="${work.dir}">
				<include name="pdf-tool*.jar" />
			</fileset>
		</copy>
		<copy todir="${work.dir}/lib" preservelastmodified="true">			
			<fileset dir="lib/1.7/">
				<include name="*.jar" />
			</fileset>
		</copy>	
		<copy todir="${work.dir}/conf" preservelastmodified="true">
			<fileset dir="../src/test/resources">
				<include name="*.xml" />
			</fileset>
		</copy>
		<copy todir="${work.dir}/bin" preservelastmodified="true">
			<fileset dir="bin">
				<include name="*.sh" />
				<include name="*.bat" />
			</fileset>
		</copy>
		<copy todir="${work.dir}" preservelastmodified="true">
			<fileset dir=".">
				<include name="readme.txt" />
			</fileset>
		</copy>
		<delete file="${target.file}"/>
		<zip destfile="${target.file}">
			<fileset dir="${work.dir}">
				<include name="bin/*.sh" />	
				<include name="bin/*.bat" />	
				<include name="conf/*.xml" />
				<include name="lib/*.jar" />
				<include name="readme.txt" />
				<exclude name="lib/ant*.jar" />	
			</fileset>			
		</zip>
	</target>	
</project>
